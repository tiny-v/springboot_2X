<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tinyv.demo.business.dao.UserDao">

    <select id="getUser" parameterType="java.lang.String" resultType="com.tinyv.demo.business.bean.User">
        SELECT * FROM user where username=#{username}
    </select>

    <!-- getUserById -->
    <select id="getUserById" parameterType="java.lang.String" resultType="com.tinyv.demo.business.bean.User">
        SELECT * FROM user where id = #{id}
    </select>

    <!-- 插入用户 -->
    <insert id="insertUser" parameterType="com.tinyv.demo.business.bean.User">
        INSERT INTO `user`
        (
            username,
            password,
            nickname,
            description,
            type,
            email,
            telephone
        )
        VALUES
        (
            #{username},
            #{password},
            #{nickname},
            #{description},
            #{type},
            #{email},
            #{telephone}
        )
    </insert>

</mapper>